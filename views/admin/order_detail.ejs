<%- include("../partials/header", { title: "Заказ #" + order.id }) %>

<div class="card" style="margin:18px 0;">
  <div class="admin-nav">
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/products">Products</a>
    <a href="/admin/orders">Orders</a>
    <a href="/catalog">Открыть магазин</a>
  </div>

  <h2 style="margin:0 0 10px;">Заказ #<%= order.id %></h2>
  <div class="kv">
    <div class="pill">Клиент: <b><%= order.full_name %></b></div>
    <div class="pill">Тел: <b><%= order.phone %></b></div>
    <div class="pill">Город: <b><%= order.city %></b></div>
    <div class="pill">НП: <b><%= order.np_branch %></b></div>
    <div class="pill">Сумма: <b><%= money(order.total_uah) %></b></div>
  </div>
  <% if (order.comment) { %>
    <div class="line"></div>
    <div class="small"><b>Комментарий:</b> <%= order.comment %></div>
  <% } %>

  <div class="line"></div>
  <form method="post" action="/admin/orders/status" style="display:flex; gap:10px; align-items:end; flex-wrap:wrap;">
    <input type="hidden" name="id" value="<%= order.id %>">
    <div style="min-width:220px;">
      <label>Статус</label>
      <select name="status">
        <option value="new" <%= order.status==='new'?'selected':'' %>>new</option>
        <option value="processing" <%= order.status==='processing'?'selected':'' %>>processing</option>
        <option value="shipped" <%= order.status==='shipped'?'selected':'' %>>shipped</option>
        <option value="done" <%= order.status==='done'?'selected':'' %>>done</option>
        <option value="canceled" <%= order.status==='canceled'?'selected':'' %>>canceled</option>
      </select>
    </div>
    <button class="btn btn-primary" type="submit">Обновить статус</button>
  </form>

  <div class="line"></div>
  <h3 style="margin:0 0 10px;">Товары</h3>
  <table class="table">
    <thead><tr><th>Товар</th><th>Цена</th><th>Кол-во</th><th>Сумма</th></tr></thead>
    <tbody>
      <% items.forEach(it => { %>
        <tr>
          <td><%= it.name %></td>
          <td><%= money(it.price_uah) %></td>
          <td><%= it.qty %></td>
          <td><%= money(it.price_uah * it.qty) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include("../partials/footer") %>
